{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "alwaysStrict": true,
    "checkJs": false,
    "downlevelIteration": false,
    "importHelpers": false,
    "noEmitOnError": false,
    "noEmitHelpers": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitUseStrict": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false,
    "declaration": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "target": "es2020",
    "watch": false,
    "outDir": "./dist",
    "rootDirs": [
      "src"
    ],
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": [
      "@types/node",
      "@types/mocha"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}

